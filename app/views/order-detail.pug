extends layouts/_default

include ./mixins/icon

block opts
    - var pageTitle = 'Objednávky'

block content
 - var currentStep = 2
  -
    var swiperConfig = {
      slidesPerView: 6,
      simulateTouch: false,
      breakpoints: {
        768: {
          slidesPerView: 3,
          simulateTouch: true,
        },
      },
    };

  main.account

    section.section.section
      .wrapper-main
        .row
          .col--l-3.col--12.show-l.mb-large(data-sticky-container)
            .order-list(data-sticky, data-scroll-offset=`{"0": ${header.size.default + 40}, "768": ${header.size.m + 40}}`, data-sticky-class="is-stuck", data-sticky-for="1024px")
              .order-list__container.overflow-auto
                .bar
                  .bar__item.bar__item--shrinkable.text-medium Rok:
                  .bar__item.bar__item--fill
                    .form-control.form-control--select
                      select.js-select.select--ghost
                        option 2019
                        option 2018
                        option 2017
                        option 2016
                - for (i=0; i<20; i++)
                  a.order-list__item.card.card--clickable(href="order-detail.html", class=i === 0 ? "card--well bg-secondary" : "border-bottom-grey")
                    .card__content.card__content--condensed
                      .bar.align-items-top
                        .bar__item.bar__item--fill
                          .text-medium.text-semibold Objednávka č. 123
                          .text-small.text-color-grey 12.4.2017
                          .text-small
                            .text-semibold 10,00 €

                            if i<1
                              +icon('time', 'icon--small').text-color-grey
                            else
                              +icon('check-circle', 'icon--small').text-color-success
                            | #{i<1 ? ' Prijatá' : ' Vybavená'}
                            span.text-color-grey.ml-small Dnes
                        .bar__item
                          .thumbnail.thumbnail--book.thumbnail--medium
                            .thumbnail__img-wrap
                              img(src="images/content/books/sample-3.jpg")
                .card.card--well.text-center
                  .card__content
                    b Nestačilo?
                    | #{' '}Potrebujete sa vrátiť k niektorej z ešte starších objednávok?#{' '}
                    a.link Napíšte nám


          .col--l-9.col--12
            include modules/order
