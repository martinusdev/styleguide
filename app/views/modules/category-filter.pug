        button.btn.btn--clean.btn--icon-right.btn--lowercase.text-left.px-none.text-transform-none.text-color-black(data-toggle="self, #filter-formats", data-toggle-icon=`../icons_/app.svg#icon-chevron-${collapseFilters ? 'up' : 'down'}`, data-collapse-trigger) Formáty
