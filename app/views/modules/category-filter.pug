include ./../mixins/icon
include ./../mixins/xmas
.filter
  if xmas
    .filter__cat
      .filter__cat-name
        .form-control.form-control--group.mb-none
          .radiocheck-group
            .form-control.form-control--checkbox
              .form-check
                input.form-check-input(type="checkbox", id="filter-news")
                label.radiocheck__control(for="filter-news")
                label.form-check-label.text-medium(for="filter-news")
                  | Stíhame do Vianoc
                  +icon('xmas-small').icon--small.text-color-success
  dl.filter__cat
    dt.filter__cat-name
      .btn-layout--vertical.mb-none
        button.btn.btn--clean.btn--icon-right.btn--lowercase.text-left.px-none.text-transform-none.text-color-black(data-toggle="self, #filter-show-only", data-toggle-icon=`../icons_/app.svg#icon-chevron-${collapseFilters ? 'up' : 'down'}`, data-collapse-trigger) Zobraziť iba
          +icon(`chevron-${collapseFilters ? 'down' : 'up'}`, 'icon--medium').text-color-grey
    dd.filter__cat-items#filter-show-only(data-toggle-class="hide", class=collapseFilters ? 'hide' : '')
      .form-check
        input.form-check-input(type="checkbox", id="filter-news")
        label.form-check-label(for="filter-news") Novinky
      .form-check
        input.form-check-input(type="checkbox", id="filter-discount")
        label.form-check-label(for="filter-discount") Zľavnené tituly
      .form-check
        input.form-check-input(type="checkbox", id="filter-online-store")
        label.form-check-label(for="filter-online-store") Na sklade online long text fakt a este dlhsi
      .form-check
        input.form-check-input(type="checkbox", id="filter-book-store", name="book-store-option[type]" data-radiocheck-toggle="#filter-book-store-options")
        label.form-check-label(for="filter-book-store") V kníhkupectve
      .form-check
        input.form-check-input(type="checkbox", id="filter-presale")
        label.form-check-label(for="filter-presale") Predpredaj
  dl.filter__cat
    dt.filter__cat-name
      .btn-layout--vertical.mb-none
        button.btn.btn--clean.btn--icon-right.btn--lowercase.text-left.px-none.text-transform-none.text-color-black(data-toggle="self, #filter-product-type", data-toggle-icon=`../icons_/app.svg#icon-chevron-${collapseFilters ? 'up' : 'down'}`, data-collapse-trigger) Typ produktu
          +icon(`chevron-${collapseFilters ? 'down' : 'up'}`, 'icon--medium').text-color-grey
    dd.filter__cat-items#filter-product-type(data-toggle-class="hide", class=collapseFilters ? 'hide' : '')
      .form-check
        input.form-check-input(type="checkbox", id="filter-books")
        label.form-check-label(for="filter-books") Knihy#{' '}
          span.text-color-grey.ml-tiny.text-size-small 635
      .form-check
        input.form-check-input(type="checkbox", id="filter-ebooks")
        label.form-check-label(for="filter-ebooks") E-knihy#{' '}
          span.text-color-grey.ml-tiny.text-size-small 635
      .form-check
        input.form-check-input(type="checkbox", id="filter-audiobooks")
        label.form-check-label(for="filter-audiobooks") Audioknihy#{' '}
          span.text-color-grey.ml-tiny.text-size-small 635
  dl.filter__cat
    dt.filter__cat-name
