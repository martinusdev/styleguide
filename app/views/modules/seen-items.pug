section.section.section--white.section--overflow#seen-items(data-toggle-class="hide", style="min-height: 159px;")
  .wrapper-main
    .d-flex.justify-content-between.align-items-center.mb-small
      h3.mb-none Pozreli ste si
      a.h5.link.mb-none.mj-products-seen-remove-link(href="#") Vymazať históriu
    -
      var swiperConfig = {
        slidesPerView: 'auto',
        slidesPerGroup: 1,
        spaceBetween: 10,
      };
      swiperConfig = JSON.stringify(swiperConfig);
    .carousel.mb-none(style="overflow: hidden;")
      .swiper(data-swiper-options=swiperConfig)
        .swiper-wrapper
          each item, i in Array(12)
            .swiper-slide.carousel__recently-viewed.swiper-slide-visible.swiper-slide-active
              a.product-cover.product-cover--medium.product-cover--book.shadow-none(href="#")
                img.d-block(src=`${assetsPrefix}images/content/books/sample-${i + 1}.jpg`, alt="...")
