include ./../../mixins/icon
include ./../../mixins/xmas

.card.card--done.mb-small#cart
  .card__content
    .bar
      .bar__item
        h2 Váš košík
      .bar__item.bar__item--fill
        .pill.pill--blue 4
      .bar__item
        button.btn.btn--clean.no-mrg.no-pad-right
          +icon('edit').icon--medium.icon--left
          | Upraviť
    #cart-summary(data-collapse="220")
      ul.list.list--cart.list--unstyled
        each item, i in books
          li.list__item(id=`cart-item${i}` data-toggle-class="is-active")
            .cart-item.cart-item--summary(class=item.ebook ? 'cart-item--has-tags' : '')
              .cart-item__content
                .cart-item__column.cart-item__column--product-name
                  a.text-size-medium.no-mrg.link.link--product(href="detail-knihy.html")
                    +xmas({type: 'icon'}).text-space-right-tiny
                    =item.title
                if item.ebook
                  .cart-item__column.cart-item__column--tags
                    .badge.text-nowrap E-kniha
                .cart-item__column.cart-item__column--qty
                  .text-size-medium.no-mrg
                    | 1x
                .cart-item__column.cart-item__column--price
                  .text-semibold.text-size-medium.text-nowrap= item.price
    .text-center
      span.link.text-size-medium(data-toggle="#cart-summary, self", data-toggle-icon="icons_/app.svg#icon-arrow-up", data-toggle-text="Zobraziť všetký(+3)", data-collapse-trigger) <span data-toggle-text-target>Zobraziť všetký(+3)</span>#{' '}
        +icon('arrow-down')

  .card__footer
    .bar.align-items-right.align-items-bottom
      .bar__item
        span.h3 Spolu
      .bar__item
        span.h2
          strong 21.45€
