include ./../../mixins/icon
include ./../../mixins/faIcon
include ./../../mixins/xmas

.card.card--done.mb-small#cart
  .card__content
    .bar
      .bar__item
        h2 Váš košík
      .bar__item.bar__item--fill
        .pill.pill--blue 4
      .bar__item
        button.btn.btn--clean.m-none.pr-none
          +icon('edit').icon--medium.icon--left
          | Upraviť
    #cart-summary(data-collapse="220")
      ul.list.list--cart.list--unstyled
        each item, i in books
          li.list__item(id=`cart-item${i}` data-toggle-class="is-active")
            .cart-item.cart-item--summary(class=item.ebook ? 'cart-item--has-tags' : '')
              .cart-item__content
                .cart-item__column.cart-item__column--product-name
                  a.text-size-medium.m-none.link.link--product(href="detail-knihy.pug")
                    +xmas({type: 'icon'}).mr-tiny
                    =item.title
                if item.ebook
                  .cart-item__column.cart-item__column--tags
                    .badge.text-nowrap E-kniha
                .cart-item__column.cart-item__column--qty
                  .text-size-medium.m-none
                    | 1x
                .cart-item__column.cart-item__column--price
                  .text-semibold.text-size-medium.text-nowrap= item.price
    .text-center
      span.link.text-size-medium(data-toggle="#cart-summary, self", data-toggle-icon="arrow-up", data-toggle-text="Zobraziť všetky(+3)", data-collapse-trigger) <span data-toggle-text-target>Zobraziť všetky (+3)</span>#{' '}
        +faIcon('arrow-down', 'far').ml-tiny

  .card__footer
    .bar.align-items-end
      .bar__item--fill
        .text-color-success
          +icon('footer-shipping').icon--medium.mr-small
          | Výborne! Objednávku vám vieme odoslať ešte dnes!
      .bar__item.bar__item--shrinkable
        span.h3 Spolu
      .bar__item.bar__item--shrinkable
        span.h2
          strong 21.45€
