include ./../../mixins/icon

header.header
  .header__wrapper
    .wrapper-main
      .bar.header__bar
        .bar__item.header__logo
          a(href="#")
            img(src=`${assetsPrefix}images/content/logo.svg`, alt="Martinus").show-l
            img(src=`${assetsPrefix}images/content/logo-small.svg`, alt="Martinus").hide-l
        .bar__item.bar__item--fill.show-s
          .btn.btn--ghost-inverse
            | Do kníhkupectva
            +icon('arrow-right').icon--right
        .bar__item.bar__item--fill.text-right.show-m
          .text-color-white.text-medium Páči sa ti Knižná odysea?
        .bar__item.bar__item--shrinkable
          | <div class="fb-page" data-href="https://www.facebook.com/Martinus.sk/" data-small-header="true" data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="false" ><blockquote cite="https://www.facebook.com/Martinus.sk/" class="fb-xfbml-parse-ignore" ><a href="https://www.facebook.com/Martinus.sk/">Martinus</a></blockquote></div>