include ./../../mixins/icon

header.header
  .header__wrapper
    .wrapper-main
      .bar.header__bar
        .bar__item.header__logo
          a(href="#")
            img(src=`${assetsPrefix}images/content/logo.svg`, alt="Martinus").show-l
            img(src=`${assetsPrefix}images/content/logo-small.svg`, alt="Martinus").hide-l
        .bar__item.bar__item--fill.show-m
          .btn.btn--ghost-inverse
            | Do kníhkupectva
            +icon('arrow-right').icon--right
        .bar__item.bar__item--shrinkable
          .btn.btn--clean.text-color-white#knihonaut-open
            +icon('knihonaut').icon--large
        .bar__item.bar__item--fill.text-right.show-m
          .text-color-white.text-medium Páči sa ti Knižná odysea?
        .bar__item.bar__item--shrinkable
          .text-right
            | <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-width="100" data-layout="button_count" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>