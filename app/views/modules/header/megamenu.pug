mixin megaMenuContent(props = {})
  -
    const {
      id,
      title,
      pages,
      pagesTitle,
      categories,
    } = props;

  .mega-menu__content(data-mega-menu-target, id=`mega-menu-${id}`)
    .mega-menu__mobile-header(
      data-toggle='self, parent, [data-mega-menu-contents]',
      data-toggle-icon=`${assetsPrefix}icons_/app.svg#icon-arrow-left`,
      data-toggle-expand,
      aria-haspopup="true"
    )
      .bar
        .bar__item.bar__item--fill= title
        .bar__item
          +icon('arrow-right').icon--medium.text-color-grey
    .mega-menu__content-wrap
      .mega-menu__recommended
        if pagesTitle
          h5= pagesTitle

        ul.list--expanded.no-pad.no-mrg-bottom
          each page in pages
            li
              a.link.link--black.link--show(href=page.href)= page.title

      .mega-menu__categories.mega-menu-categories
        .row
          each category in categories
            .col--l-4.col--m-6
              a(href="#").mega-menu-categories__title
                span.link=category.title
              ul.list--comma.text-size-small.no-pad.show-m
                each entry in category.entries
                  li
                    a.link.link--grey(href="#")= entry


.header__mega-menu.mega-menu(data-mega-menu)
  .mega-menu__contents(data-mega-menu-contents)
    each item in megaMenu
      +megaMenuContent(item)

    .mega-menu__banner.text-center
      .row
        .col--l-12.col--m-12.col--s-8.ofst--center.mb-medium
          .h2 Kúpite výhodne spolu
          .row.align-items-bottom.mb-medium
            .col--6
              .thumbnail.thumbnail--book.thumbnail--large.align-self-right
                .thumbnail__img-wrap
                  img.img.img--fluid.mb-medium(src=`${assetsPrefix}images/content/books/sample-5.jpg`, alt="Základy rybolovu pro kluky a holky - Frank Weissert, Jack Thorne a John Tiffany")
            .col--6
              .thumbnail.thumbnail--book.thumbnail--large
                .thumbnail__img-wrap
                  img.img.img--fluid.mb-medium(src=`${assetsPrefix}images/content/books/sample-8.jpg`, alt="Základy rybolovu pro kluky a holky - Frank Weissert, Jack Thorne a John Tiffany")
          .badges.align-items-center.mb-medium
            .badge.badge--primary Ušetríte 3,50 €
          button.btn.btn--primary.btn--large.mb-small
            +icon('cart').icon--left.icon--medium
