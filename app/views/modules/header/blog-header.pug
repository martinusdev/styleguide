include ./../../mixins/icon

header.header
  .header__wrapper
    .wrapper-main
      .bar.header__bar
        .bar__item.header__logo
          a(href="#")
            img(src=`${assetsPrefix}images/content/logo.svg`, alt="Martinus").show-l
            img(src=`${assetsPrefix}images/content/logo-small.svg`, alt="Martinus").hide-l
        .bar__item.header__subbrand
          .h3.text-color-white.text-transform-upper blog
        .bar__item.bar__item--fill.header__nav
          .btn-layout.btn-layout--horizontal
            button.btn.btn--clean.btn--lowercase.header-btn
              | O blogu
            button.btn.btn--clean.btn--lowercase.header-btn.show-s
              | Archív
            button.btn.btn--clean.btn--lowercase.header-btn.show-s
              | Autori

        .bar__item.bar__item--fill.header__search.header-search
          .hide-m.header-search__toggle.m-none
            button.btn.btn--clean.header-btn.mb-none(data-toggle=".header", data-toggle-class-target="is-search-active")
              +icon('search').icon--medium
          .hide-m.header-search__back
            button.btn.btn--clean.header-btn.mb-none(data-toggle=".header", data-toggle-class-target="is-search-active")
              +icon('arrow-left').icon--medium
          .header-search__search(style="position: relative;")
            .form-control.form-control--input.mb-none
              .input-addons
                input.input.input--dark#search-in-header(type='text', placeholder="Vyhľadávanie v článkoch...", data-input, data-toggle-focus)
                .input-addons__item.header-search__empty.input-addons__item--dark
                    +icon('search', '', 'Search').icon--medium
                .input-addons__item.input-addons__item.p-none.header-search__value
                  .btn.btn--primary.text-nowrap
                    +icon('search', '', 'Search').icon--medium.icon--left
                    | Hladať
