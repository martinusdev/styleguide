mixin megaMenuContentTest(props = {})
  -
    const {
      id,
      title,
      mainLinkTitle,
      additionalLinks,
      recommended,
      categories,
    } = props;

  .mega-menu__content(data-mega-menu-target, id=`mega-menu-${id}`)
    .mega-menu__mobile-header(
      data-toggle='self, parent, [data-mega-menu-contents]',
      data-toggle-icon=`${assetsPrefix}icons_/app.svg#icon-arrow-left`,
      data-toggle-expand,
      aria-haspopup="true"
    )
      .bar
        .bar__item.bar__item--fill= title
        .bar__item
          +icon('arrow-right').icon--medium.text-color-grey
    .mega-menu__content-wrap
      .mega-menu__categories.mega-menu-categories
        .row.border-bottom-grey
          .col
            .mega-menu--title.flex.align-items-justify.align-items-middle.mb-medium
              h2.no-mrg-bottom= title
              a.link.text-size-medium= mainLinkTitle
        .row
          each category in categories
            .col--l-3.col--m-4.col--6.col--category
              a(href="#").pt-medium.pb-medium.link.link--black.flex.flex-column.align-items-middle.text-center
                if category.icon.startsWith('fa-')
                  i.text-color-theme.fa-3x.fad(class= category.icon)
                else
                  +icon(category.icon).icon--xlarge.text-color-theme
                strong.mt-small=category.title
        if additionalLinks
          .row
            .col
              ul.list--extra-links.list-inline.list-inline--expanded.text-medium.mt-medium.flex.flex-wrap.align-items-center.align-items-middle
                each link in additionalLinks
                  li.col--category
                    a.block.pt-medium.pb-medium.link(href='#').text-center
                      i.fa-lg(class=link.icon)
                      | &nbsp;
                      = link.title
      if recommended
        .mega-menu__recommended
          .row
            each group in recommended
              .col--6.col--m-4.col--l-12
                ul.list--expanded.text-size-medium.no-pad
                  li.text-transform-upper.text-size-small= group.title
                  each item in group.entries
                    li
                      a.link(href='#')= item

.header__mega-menu.mega-menu.mega-menu-test-1(data-mega-menu)
  .mega-menu__contents(data-mega-menu-contents)
    each item in megaMenu
      +megaMenuContentTest(item)
