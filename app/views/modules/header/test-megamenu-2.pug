mixin megaMenuContentTest(props = {})
  -
    const {
      id,
      title,
      mainLinkTitle,
      additionalLinks,
      recommended,
      categories,
    } = props;

  .mega-menu__content(data-mega-menu-target, id=`mega-menu-${id}`)
    .mega-menu__content-wrap
      .mega-menu__categories.mega-menu-categories
        .mega-menu--title.flex.align-items-justify.align-items-middle.pb-medium.border-bottom-grey
          h2.no-mrg-bottom= title
          a.link.text-size-medium= mainLinkTitle
        .row.no-mrg-horizontal
          each category in categories
            .col.col--l-4.col--m-3.col--12.col--category.pt-medium
              .flex.pl-tiny
                .category-icon
                  if category.icon.startsWith('fa-')
                    i.text-color-theme.fa-2x.fa-fw.fad(class= category.icon)
                  else
                    +icon(category.icon).icon--large.text-color-theme
                div
                  a(href="#").link.link--black.mega-menu-categories__title
                    h3.mt-tiny.mb-medium=category.title
                  if category.entries
                    ul.no-pad-left.text-medium(class=category.hideEntries?'show-m':'')
                      each item in category.entries
                        li.mb-small
                          a.link.link--black(href='#')= item
                      li
                        a.link(href='#')
                          | + Ďalšie kategórie
        if additionalLinks
          .row.no-mrg-horizontal
            .col
              ul.list--extra-links.list-inline.list-inline--expanded.text-medium.mb-none.flex.flex-wrap.align-items-center.align-items-middle
                each link in additionalLinks
                  li.col--category
                    a.block.pt-medium.pb-medium.link(href='#').text-center
                      +icon(link.icon).icon--medium(class= link.iconColor)
                      | &nbsp;
                      = link.title
      if recommended
        .mega-menu__recommended
          .row.no-mrg-horizontal
            each group in recommended
              .col--6.col--m-4.col--l-12
                ul.list--expanded.text-size-medium.no-pad
                  li.text-transform-upper.text-size-small= group.title
                  each item in group.entries
                    li
                      a.link(href='#')= item

.header__mega-menu.mega-menu.mega-menu-test-2(data-mega-menu-test)
  .mega-menu__contents(data-mega-menu-contents)
    div.bg-grey.text-color-white.mega-menu__mobile-categories.btn-layout.btn-layout--horizontal.no-mrg-bottom.hide-l
      each item in mainNav
        .btn-dropdown.btn-dropdown--no-icon.no-mrg
          if item.trigger
            a.btn(
              data-mega-menu-test-trigger=`#${item.trigger}`,
              data-toggle="self",
              aria-haspopup="true",
              id=`toggle-${item.trigger}`
            )= item.title
          else
            a.btn(href=item.link)= item.title
    each item in megaMenu
      +megaMenuContentTest(item)
