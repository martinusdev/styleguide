mixin formatIcon(type)
  case type
    when 'book'
    default
      +faIcon('book')&attributes(attributes)
    when 'audiobook'
      +faIcon('volume')&attributes(attributes)
    when 'ebook'
      +faIcon('tablet-screen')&attributes(attributes)
    when 'used'
      +faIcon('book-arrow-up')&attributes(attributes)

mixin formatName(type)
  case type
    when 'book'
      | Kniha
    when 'audiobook'
      | Audiokniha
    when 'ebook'
      | E-kniha
    when 'used'
      | Čítaná

