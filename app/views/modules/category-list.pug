mixin availability(props = {}, type = 'book')
  -
    const {
      soldOut = false,
      comingSoon = false
    } = props

  if soldOut
    em.text-color-grey Vypredané
  else if comingSoon
    em.text-color-grey-dark
      =comingSoon
  else
    case type
      when 'ebook'
      when 'audiobook'
        em.text-color-green Ihneď na stiahnutie
      default
        em.text-color-green Na sklade

