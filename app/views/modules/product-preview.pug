.modal-overlay.modal-overlay--dark#product-preview(data-modal)
  article.modal.modal--full.hide
  .product-preview(data-product-preview)
    .product-preview__header.bar
      .bar__item.bar__item--fill
        h2.text-color-white.show-m Sherlock Holmes 2: Dobrodružstvá Sherlocka Holmesa
      .bar__item
        button.btn.btn--clean(data-toggle="#product-preview").text-color-white
          span Zatvoriť
          +icon('close').icon--medium.icon--right

    .product-preview__content
      .product-preview__control.show-m
        .bar.bar--vertical
          .bar__item
            button.btn.btn--large.btn--equal.btn--ghost.bg-default(data-toggle='#product-preview-slider, self', data-toggle-icon=`${assetsPrefix}icons_/app.svg#icon-zoom-out`)
              +icon('zoom-in').icon--medium
          .bar__item
            button.btn.btn--large.btn--equal.btn--ghost.bg-default(data-product-preview-prev)
              +icon('arrow-up').icon--medium
          .bar__item.text-center
            p.text-semibold
              span.text-color-white(data-product-preview-page) 1
              span.text-color-grey  /#{' '}
              span.text-color-grey 5
          .bar__item
            button.btn.btn--large.btn--equal.btn--ghost.bg-default(data-product-preview-next)
              +icon('arrow-down').icon--medium

      .product-preview__slider(data-product-preview-slider)#product-preview-slider
        each product, index in Array(5)
          .product-preview__page(data-product-preview-slide=`${index}`)
            img.img--fluid(src=`${assetsPrefix}images/content/book-preview/preview-1.jpg`)

      .product-preview__info
        .card
          .card__content
            h2.show-m Ukážky na stiahnutie
            .btn-layout.btn-layout--horizontal.btn-layout--fill.no-mrg-bottom
              a(href="#").btn.btn--ghost.btn--icon-left
                +icon('download').icon--medium
                | PDF
              a(href="#").btn.btn--ghost.btn--icon-left
                +icon('download').icon--medium
                | EPUB
              a(href="#").btn.btn--ghost.btn--icon-left
                +icon('download').icon--medium
                | MOBI

        .card.show-m
          .card__content
            .form-control.form-control--select
              select#product-preview-product-select(data-select-product)
            ul.list-inline
              li
                a.link.text-size-medium(href='#') Brožovaná väzba
              li
                a.link.text-size-medium(href='#') E-kniha
              li
                a.link.text-size-medium(href='#') Audio kniha

            .btn-layout.btn-layout--horizontal.btn-layout--fill
              a.btn.btn--primary(href='#')
                +icon('cart').icon--medium.icon--left
                | Vložiť do košíka
              .btn-dropdown.no-mrg
                button.btn.btn--clean.no-mrg(data-toggle="self, next")
                  +icon('heart', 'icon-dropdown').icon--medium.icon--left
                  | Pridať do
                .dropdown.dropdown--arrowhead(data-dropdown aria-expanded="false")
                  a(href="#").dropdown__item Wishlist
                  a(href="#").dropdown__item Moj zoznam
                  a(href="#").dropdown__item
                    +icon('plus', 'icon-dropdown').icon--medium
                    | Novy zaznam
