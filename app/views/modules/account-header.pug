section.section.section--secondary
  .wrapper-main
    .row.align-items-middle
      .col--l-4.col--fill
        .row.align-items-middle
          .col--shrink.no-pad-right.show-l
            img(src="/images/content/user-photo.png", alt="User", width="52")
          .col--fill
            h1.h3.text-color-black.text-semibold.no-mrg-bottom.show-l Bartolomej Najsčítanejší
            h2.h1.account-title Môj martinus
      .col--fill.show-l
        +inlineNav({ items: ['Moja knižnica', 'Objednávky', 'Účet']})

      .col--l-3.col--shrink.text-right
        button.btn.btn--clean.btn--small.no-mrg-bottom
          span.show-m Odhlásiť sa
          +icon('logout', 'icon--medium').icon--right
    .hide-l
      .bar
        .bar__item.bar__item--fill
          .form-control.form-control--select.no-mrg
            select.js-select.select--ghost#account-sections-spy.bg-default
              each slug, link in {'Účet':'ucet', 'Adresy':'adresy', 'Platby':'platby', 'Newsletter':'newsletter', 'E-knihy':'eknihy', 'O vás':'ovas'}
                option(value=slug) !{link}
        .bar__item
          button.btn Uložiť
    .mb-large
