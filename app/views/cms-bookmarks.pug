  script.
    window.myApp = window.myApp = {};
    window.myApp.scrollOffset = {0: 85, 768: 95};

    document.getElementById('select-tabs').addEventListener('change', function () {
      window.location.href = this.value;
    });

    document.getElementById('tab-4-button').addEventListener('click', function() {
      var i = 0;
      var bookmarks = document.querySelectorAll('.flip-card').forEach(function (el) {

        setTimeout(function () {
          el.classList.add('flip-card--45');
          setTimeout(function () {
            el.classList.remove('flip-card--45');
          }, 500);
        }, 150 * i);

        el.addEventListener('click', function (e) {
          var tgt = e.currentTarget;
          if (tgt.classList.contains('flip-card--hover')) {
            tgt.classList.remove('flip-card--hover');
          } else {
            tgt.classList.add('flip-card--hover');
          }
        });

        i++;
      });
    });
