extends layouts/_default

include ./mixins/breadcrumbs
include ./mixins/icon

block opts
    - var pageTitle = 'Text page'
    -
      const navigation = [
        {
          title: 'Martinus hľadá posily',
          href: 'href',
        }, {
          title: 'Akých ľudí do Martinusu hľadáme?',
          href: 'najcastejsie-otazky',
        }, {
          title: 'Novinky s pracovnými ponukami',
          href: 'postovne',
        }, {
