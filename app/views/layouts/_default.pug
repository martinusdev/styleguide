//- -----------------------------------------------
//- VARIABLES AND DATA

- const assetsPrefix = '';
- const htmlPostfix = '.html';

//- -----------------------------------------------
//- OPTIONS

block opts

//- -----------------------------------------------
//- HTML

doctype html
html.no-js

  //- -----------------------------------------------
  //- HEAD

  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=yes")

    title= pageTitle

    meta(name='author', content='Lighting Beetle s.r.o.')
    meta(name="description", content="")
    meta(name='keywords', content='')
    link(rel="shortcut icon", href=`${assetsPrefix}favicon.ico`)
    meta(name="theme-color", content=project.theme)

    link(rel="stylesheet", href=`${assetsPrefix}fonts/Tabac/fonts.css`)

    link(rel="stylesheet", href=`${assetsPrefix}styles/main.css`)

    script(src=`${assetsPrefix}scripts/plugins/modernizr.js`)

  //- -----------------------------------------------
  //- BODY

  body(class=`${pageClass}`)
    #page-container

      if checkoutHeader
        include ./../modules/header/checkout-header
      else
        include ./../modules/header/header

      block content

      include ./../modules/footer

      block modals

      .alert-container(data-alert-area)

    //- -----------------------------------------------
    //- SCRIPTS
    script.
      window.myApp = {};
      window.myApp.selectLanguage = 'cz';
    script(src=`${assetsPrefix}scripts/vendor.js`)
    script(src=`${assetsPrefix}scripts/main.js`)

    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBmcfNr4Wrku7nwOEnrnoq33yPgH_Xi7uo&callback=initMap" async defer)

    block scripts
