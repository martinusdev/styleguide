include ./../mixins/icon
//- -----------------------------------------------
//- VARIABLES AND DATA

- const assetsPrefix = '';
- const htmlPostfix = '.html';
- const xmas = false;

- var gdpr = false;
- var headerWarningActive = false;
- var headerWarning = headerWarningActive ? ' has-header-warning' : '';

//- -----------------------------------------------
//- OPTIONS

block opts

//- -----------------------------------------------
//- HTML

doctype html
html.no-js

  //- -----------------------------------------------
  //- HEAD

  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=yes")

    title= pageTitle

    meta(name='author', content='Lighting Beetle s.r.o.')
    meta(name="description", content="")
    meta(name='keywords', content='')
    link(rel="shortcut icon", href=`${assetsPrefix}favicon.ico`)
    meta(name="theme-color", content=project.theme)

    meta(name='verify-v1', content='T+OHlS5UzwUGqeLzY9VCoZi05W1LWAjmytPCIQ2f3kw=')

    link(rel="stylesheet", href=`${assetsPrefix}fonts/Tabac-Sans/style.css`)

    link(rel="stylesheet", href=`${assetsPrefix}styles/main.css`)

    script(src=`${assetsPrefix}scripts/plugins/modernizr.js`)

    block head

  //- -----------------------------------------------
  //- BODY

  body(class=`${pageClass}` + `${headerWarning}`)
    | <div id="fb-root"></div>
    | <script>(function(d, s, id) {
    |   var js, fjs = d.getElementsByTagName(s)[0];
    |   if (d.getElementById(id)) return;
    |   js = d.createElement(s); js.id = id;
    | js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10&appId=227452250615460';
    | fjs.parentNode.insertBefore(js, fjs);
    | }(document, 'script', 'facebook-jssdk'));</script>

    #page-container

      if headerWarningActive != false
        .section.section--small.header-warning.no-pad.bg-yellow
          .wrapper-main
            .mb-tiny
            .bar.mb-tiny
              .bar__item.bar__item--fill.text-color-black
                +icon('delivery')
                small #{' '}Prepáčte, ak bude vaša objednávka 1-2 dni meškať.#{' '}
                  a(href="#").link prečo?
        .section.section--small.header-warning.no-pad.bg-black
          .wrapper-main
            .mb-tiny
            .bar.mb-none
              .bar__item.bar__item--fill.text-color-grey-light
                +icon('delivery')
                small #{' '}Prepáčte, ak bude vaša objednávka 1-2 dni meškať.#{' '}
                  a(href="#").link prečo?

      block header
        if checkoutHeader
          include ./../modules/header/checkout-header
        else if campaignHeader
          include ./../modules/header/campaign-header
        else if blogHeader
          include ./../modules/header/blog-header
        else if orderHeader
          include ./../modules/header/order-header
        else
          include ./../modules/header/header

      block content

      block footer
        include ./../modules/footer

      if gdpr
        .footer-warning
          if pageTitle == 'Detail knihy'
            section.section.section-sticky-bottom.hide.is-consent-show.is-consent-hide-m(style="position: relative;")
              .wrapper-main
                .btn-layout--vertical.mb-medium
                  button.btn.btn--primary.btn--large.mb-small(data-toggle='#checkout-notice')
                    +icon('cart').icon--left.icon--medium
                    | Vložiť do košíka
          .section.section--small.bg-yellow
            .wrapper-main
              .bar
                .bar__item.bar__item--fill
                  | Na to, aby sme vám mohli lepšie odporučiť knihy, ktoré by vás mohli zaujímať si potrebujeme uložiť do vášho prehliadača údaje.
                  br
                  | Súhlasíte s tým? Svoj súhlas môžete neskôr odvolať.
                .bar__break.hide-m
                .bar__item.bar__item--shrinkable.text-right
                  a.link(href="#") Viac informácií
                .bar__item.bar__item--shrinkable.text-right
                  a.btn.btn--primary súhlasím

      block modals

      block tooltips

      .alert-container(data-alert-area)

    //- -----------------------------------------------
    //- SCRIPTS
    script.
      window.myApp = window.myApp || {};
      window.myApp.selectLanguage = 'sk';
    script(src=`${assetsPrefix}scripts/vendor.js`)
    script(src=`${assetsPrefix}scripts/main.js`)

    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBmcfNr4Wrku7nwOEnrnoq33yPgH_Xi7uo&callback=initMap" async defer)

    block scripts
