							span.text-transform-upper.text-small pdf
						a(href="#").dropdown__item
							+icon('download').icon--small.text-space-right
							span.text-transform-upper.text-small epub
						a(href="#").dropdown__item
							+icon('download').icon--small.text-space-right
							span.text-transform-upper.text-small mobi
