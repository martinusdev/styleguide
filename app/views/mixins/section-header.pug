mixin section-header(props)
  -
    const {
      header,
      more = 'VÅ¡etky',
      moreHref = '#',
      center = false,
      small = false,
    } = props;

  .bar(class=small ? 'mb-small' : 'mb-medium')
    .bar__item.bar__item--fill.bar__item--shrinkable
      h2(class=center ? 'text-center' : '', class=small ? 'h5' : '')= header
    if more
      .bar__item
        a.link(href=moreHref).text-medium= more
          +icon('arrow-right')
