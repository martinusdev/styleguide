include ../product
include ../icon
include ./annotation
include ./annotationAuthor

mixin bookHorizontal(props = {})
  -
    const {
      cover,
      coverSize,
      title,
      authors,
      publisher,
      description,
      review,
      showReview,
      id,
      recommender,
    } = props;

  .section.product-item.no-mrg-bottom
    .wrapper-main
      .row
        .col--4.col--s-shrink.text-left.ofst--center
          +product().no-mrg-bottom
            +productCover({
              cover: cover,
              size: coverSize
            }).mb-medium
        .col--s-fill
          h2(data-toggle=`#u${id}`).text-bold.mb-small
            a.link.link--product.text-bold #{title}
          ul.list--dot.no-pad
            li
              each val, key in authors
                if key >= 1
                  span , 
                if val.url
                  a.link(href=`${val.url}`) #{val.name}
                else
                  strong #{val.name}
            li
              span.text-color-grey #{publisher}
          if showReview
            +annotation({annotation: review})
            +annotationAuthor(recommender)
          else
            p.mb-small #{description}
          a(data-toggle=`#u${id}` style="display:block;").link.text-medium.text-color-theme.mb-large Viac o knihe
            +icon('arrow-right', 'icon--small')