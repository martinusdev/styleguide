include categoryCarousel
include stlpec
include riadok
include modalContent

mixin partialDetiPage
  +categoryCarousel({
    category: deti1,
    className: "deti1",
    description:
      "Dobrá detská knižka otvára bránu k zvedavosti, fantázii a múdrosti. Nepoteší len dieťa, ale zaujme aj dospelého.",
    title: "Knihy pre deti vo veku 0-3 roky",
  })
  +stlpec({
    books: [deti1.u758407, deti1.u777669],
    imageUrl: "https://i1.martinus.sk/assets/martinus/lb/images/knihy-roka/mood/08.jpg",
    isPlushToy: true,
  })
  +riadok({
    books: [deti1.u706587, deti1.u801211, deti1.u801215],
  })

  each val, key in deti1
    +modalContent(deti1[key])
