mixin discountBadge(props = {})
  -
    const {
      size = 40,
      percentage = 75,
      text = '3 dni',
    } = props;
    const radius = (size / 2) - 2;
    const dashArray = 2 * 3.14 * radius;
    const offset = dashArray - (dashArray * percentage / 100);

  .thumbnail-badge&attributes(attributes)
    <svg id="svg" width="40" height="40" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
      <circle cx="#{size / 2}" cy="#{size / 2}" r="#{radius}" fill="#FFFFFF"/>
      <circle stroke="#E5E5E5" stroke-width="2" cx="#{size / 2}" cy="#{size / 2}" r="#{radius}" fill="transparent" stroke-dashoffset="0"></circle>
      <circle id="bar" stroke="#D22121" stroke-width="2" stroke-dasharray="#{dashArray}" cx="#{size / 2}" cy="#{size / 2}" r="#{radius}" fill="transparent" stroke-dashoffset="#{offset}" transform="rotate(-90)" transform-origin="50% 50%"></circle>
    </svg>
    span.thumbnail-badge__value.text= text
