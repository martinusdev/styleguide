include icon

mixin checkoutCardDone(props = {})
  -
    const {
      id = '',
      title = 'Nadpis',
      summary,
      price,
    } = props;

  .card.card--done.mb-small(id=id)
    .card__content
      .bar
        .bar__item.bar__item--fill
          h2!=title
        .bar__item
          button.btn.btn--clean.m-none.pr-none
            +icon('edit').icon--medium.icon--left
            | Upravi≈•

    if summary
      .card__content.pt-none.mb-medium
        .bar.m-none
          .bar__item.bar__item--fill.text-size-medium!=summary
          if price
            .bar__item.text-size-medium
              strong!=price
