extends layouts/_default

include ./mixins/knihy-roka/bigHighlight
include ./mixins/knihy-roka/categoriesLinks
include ./mixins/knihy-roka/categoryCarousel
include ./mixins/knihy-roka/highlight
include ./mixins/knihy-roka/postheader
include ./mixins/knihy-roka/prefooter
include ./mixins/knihy-roka/riadok
include ./mixins/knihy-roka/stlpec
include ./mixins/knihy-roka/partialBeletriaPage

block opts
  - var pageTitle = 'Beletria';
  - var backButton = false;

block content
  each val, key in beletria
    +checkoutModal(beletria[key])
  each val, key in deti1
    +checkoutModal(deti1[key])

  main
    +postheader
    +partialBeletriaPage

    +heroBanner("children")

    section.section#deti
      .wrapper-main
        .mb-large
        h2 Kategórie pre deti
        +categoriesLinks({
          links: [
            {
              title: "Vo veku 0-3 roky",
              id: "beletria"
            },
            {
              title: "Vo veku 4-6 rokov",
              id: "knihy-pre-deti-vo-veku-4-6-rokov"
            },
            {
              title: "Vo veku 7-10 rokov",
              id: "knihy-pre-deti-vo-veku-7-10-rokov"
            },
            {
              title: "Vo veku 11-13 rokov",
              id: "knihy-pre-deti-vo-veku-11-13-rokov"
            },
            {
              title: "Vo veku 14-16 rokov",
              id: "knihy-pre-deti-vo-veku-14-16-rokov"
            },
          ],
        })
    +categoryCarousel({
      category: deti1,
      className: "deti1",
      description:
        "Dobrá detská knižka otvára bránu k zvedavosti, fantázii a múdrosti. Nepoteší len dieťa, ale zaujme aj dospelého.",
      title: "Vo veku 0-3 roky",
    })

    +stlpec({
      books: [deti1.u758407, deti1.u777669],
      imageUrl: "/images/knihy-roka/mood/08.jpg",
    })

    +riadok({
      books: [deti1.u706587, deti1.u801211, deti1.u801215],
    })

    +prefooter