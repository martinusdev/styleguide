extends layouts/_default

include ./mixins/knihy-roka/annotation
include ./mixins/knihy-roka/annotationAuthor
include ./mixins/knihy-roka/backgroundSection
include ./mixins/knihy-roka/bookHorizontal
include ./mixins/knihy-roka/bookVertical
include ./mixins/knihy-roka/categoriesLinks
include ./mixins/knihy-roka/categoryCarousel
include ./mixins/knihy-roka/postheader
include ./mixins/knihy-roka/prefooter
include ./mixins/knihy-roka/riadok
include ./mixins/knihy-roka/bigHighlight

block opts
  - var pageTitle = 'Beletria';
  - var backButton = false;

block content
  each val, key in beletria
    +checkoutModal(beletria[key])
  each val, key in deti1
    +checkoutModal(deti1[key])

  main
    +postheader
    section.section#dospely
      .wrapper-main
        h2 Kategórie
        +categoriesLinks({
          links: [
            {
              href: "Beletria",
              color: "beletria",
            },
            {
              href: "Reportáž a literatúra faktu",
              color: "reportaz-a-literatura-faktu",
            },
            {
              href: "Populárno - náučná literatúra",
              color: "popularno-naucna-literatura",
            },
            {
              href: "Dizajn",
              color: "dizajn",
            },
            {
              href: "Tipy vydavateľov",
              color: "tipy-vydavatelov",
            },
          ],
        })
    +categoryCarousel({
      category: beletria,
      className: "beletria",
      description:
        "Dobrý príbeh unesie našu myseľ a výkupné si pýta stránku po stránke.",
      title: "Beletria",
    })

    +bigHighlight({
      imageUrl: "/images/knihy-roka/mood/03.jpg",
      book: beletria.u721103,
    })

    +riadok({
      books: [beletria.u707887, beletria.u711363, beletria.u698619],
    })

    //- HIGHLIGHT
    section.section.section--secondary.mb-large
      +bookHorizontal(beletria.u705403)

    //- STĹPEC LEFT - 3
    section.section
      .wrapper-main
        .row.mb-large
          .col--l-6
            +bookHorizontal(beletria.u721777)
            +bookHorizontal(beletria.u668745)
            +bookHorizontal(beletria.u658361)
          .col--m-8.col--l-6.ofst--m-center.mb-medium.align-self-middle
            +backgroundSection({
              imageUrl: "/images/knihy-roka/mood/02.jpg",
            })

    //- HIGHLIGHT
    section.section.section--secondary.mb-large
      +bookHorizontal(beletria.u698929)

    +riadok({
      books: [beletria.u725927, beletria.u716559, beletria.u721773],
    })

    +heroBanner("children")

    section.section#deti
      .wrapper-main
        .mb-large
        h2 Kategórie pre deti
        +categoriesLinks({
          links: [
            { href: "Vo veku 0-3 roky", color: "" },
            { href: "Vo veku 4-6 rokov", color: "" },
            { href: "Vo veku 7-10 rokov", color: "" },
            { href: "Vo veku 11-13 rokov", color: "" },
            { href: "Vo veku 14-16 rokov", color: "" },
          ],
        })
    +categoryCarousel({
      category: deti1,
      className: "deti1",
      description:
        "Dobrá detská knižka otvára bránu k zvedavosti, fantázii a múdrosti. Nepoteší len dieťa, ale zaujme aj dospelého.",
      title: "Vo veku 0-3 roky",
    })

    //- STĹPEC LEFT - 2
    section.section
      .wrapper-main
        .row.mb-large
          .col--m-8.col--l-6.ofst--m-center.mb-medium.align-self-middle
            +backgroundSection({
              imageUrl: "/images/knihy-roka/mood/08.jpg",
            })
          .col--l-6
            +bookHorizontal(deti1.u758407)
            +bookHorizontal(deti1.u777669)

    +riadok({
      books: [deti1.u706587, deti1.u801211, deti1.u801215],
    })

    +prefooter