extends layouts/_default

include ./mixins/breadcrumbs
include ./mixins/icon

block opts
    - var pageTitle = 'Kategoria'
    - var filterStickyOffset = header.size.default + 61
    - var subcategories = true
    - var carousel = true
    - var formats = false
    - var description = true

block content
  main
    section.section--breadcrumbs
      .wrapper-main
        .bar.no-mrg-bottom
          .bar__item.bar__item--shrinkable
            +breadcrumbs({ breadcrumbs: ['Knihy'] })

    section.section--secondary.section.section--toolbar.cat-no-border-bottom.no-pad-top
      .wrapper-main
        .bar.no-mrg-bottom
          .bar__item
            h1 Deti a mládež
          .bar__item.bar__item--fill
            button.btn.btn--clean
              +icon('eye', 'icon--large').icon--medium.icon--left
              span.show-m sledovať kategóriu
        .mb-medium.show-l

    section.section
      .wrapper-main
        a(href='#')
          img.show-m.img.img--fluid(src="images/content/banners/banner.jpg").no-mrg
          img.hide-m.img.img--fluid(src="images/content/banners/banner-mobile.jpg").no-mrg

    section.section--secondary.section.section--toolbar.hide-l(data-sticky, data-scroll-offset=header.size.default, data-sticky-class="is-stuck", data-sticky-wrap)
      .wrapper-main
        .btn-layout.btn-layout--vertical.mb-small
          .btn-dropdown.no-mrg
            button.btn.btn--ghost.btn--icon-right.text-left(
              data-toggle='self, next', data-toggle-icon=`${assetsPrefix}icons_/app.svg#icon-chevron-up`,
              data-toggle-expand,
              aria-haspopup="true"
            )
              | Všetky
              +icon('chevron-down', 'icon-dropdown').icon--medium
            .dropdown(data-dropdown, data-toggle-expand)
              .dropdown__wrap
                each link, i in ['Všetky', 'Rozprávky, básničky', 'Knihy pre najmenšich, Walt Disney', 'Špeciálne, darčekové', 'Beletria', 'Encyklopédie, náučné knihy', 'Komiks', 'Voľný čas, samolepky']
                  a(href="#").dropdown__item !{link}

    - let categoryListBadge = true;
    include modules/category-list
