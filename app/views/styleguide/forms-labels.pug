                input.input.input(type='text', placeholder='Input', id='input-flsz-02')
              .form-control.form-control--input
                .form-label.form-label--small
                  label(for='input-flsz-03') Form label small:
                input.input.input--small(type='text', placeholder='Input', id='input-flsz-03')
