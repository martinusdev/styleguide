extends templates/layout

//- Options
block prepend opts
  - var page = helpers.getPageIds('components.formComponents.formLabels', l_sitemap);
  - var categoryID = page.category;
  - var pageID = page.page;
  - var subPageID = page.subPage;

//- Content
block prepend content

  +main-info(['app/styles/modules/_forms.scss'], contents)

    +p-big Documentation of labels, help texts and error texts in forms.

  //- end: main info

//- Content
block append content

  //- LABELS
  +content-section(contents[0])

    +p Form labels can be created by wrapping <code class='l-code-inline'>&lt;label&gt;</code> into element with class <code class='l-code-inline'>.form-label</code>. Form label can be also placed beside inputs or stack as shown in form <a href='forms-layouts#{htmlPostfix}' class='l-a'>layouts</a>.

    +demo
      +demo-example
        .row
          .col--l-6
            .form-control.form-control--input
              .form-label
                label(for='input-01') Form label:
              input.input(type='text', placeholder='Input', id='input-01')
          .col--l-6
            .form-control.form-control--textarea
              .form-label
                label(for='textarea-01') Form label:
              textarea.input(type='text', placeholder='Textarea', id='textarea-01')

        .row
          .col--l-6
            .form-control.form-control--checkbox
              .form-label
                label(for="checkbox-withlabel") Form label:
              .checkbox
                input.radiocheck__input(type='checkbox', id='checkbox-withlabel', name='checkbox-withlabel')
                label.radiocheck__control(for='checkbox-withlabel')
                label.radiocheck__label(for='checkbox-withlabel') Checkbox

          .col--l-6
            .form-control.form-control--group
              .radiocheck-group
                .form-label
                  label Form label:
                .form-control.form-control--radio
                  .radio
                    input.radiocheck__input(type='radio', id='radio-group-withlabel-01', name='radio-group-withlabel')
                    label.radiocheck__control(for='radio-group-withlabel-01')
                    label.radiocheck__label(for='radio-group-withlabel-01') Radio 1
                .form-control.form-control--radio
                  .radio
                    input.radiocheck__input(type='radio', id='radio-group-withlabel-02', name='radio-group-withlabel')
                    label.radiocheck__control(for='radio-group-withlabel-02')
                    label.radiocheck__label(for='radio-group-withlabel-02') Radio 2
        .row
          .col--l-6
            .form-control.form-control--select
              .form-label
                label Form label:
              select.js-select
                each option in [1,2,3,4,5,6]
                  option Option #{option}
      +demo-code
        :code
          <!-- input -->
          <div class="form-control form-control--input">
            <div class="form-label">
              <label for="...">Form label:</label>
            </div>
            <input type="text" class="input" id="...">
          </div>

          <!-- textarea -->
          <div class="form-control form-control--textarea">
            <div class="form-label">
              <label for="...">Form label:</label>
            </div>
            <textarea type="text" class="input" id="..." rows="3">
          </div>

          <!-- checkbox -->
          <div class="form-control form-control--checkbox">
            <div class="form-label">
              <label for="...">Form label:</label>
            </div>
            <div class="checkbox">...</div>
          </div>

          <!-- radiogroup -->
          <div class="form-control form-control--group">
            <div class="radiocheck-group">
              <div class="form-label">
                <label>Form label:</label>
              </div>
              <div class="form-control form-control--radio">
                <div class="radio">...</div>
              </div>
              ...
            </div>
          </div>

          <!-- select -->
          <div class="form-control form-control--select">
            <div class="form-label">
              <label>Form label:</label>
            </div>
            <select class="js-select">...</select>
          </div>
    //- end: demo

    +content-sub-section('Form label inline')

      +p Inline form labels can be created with form control modifier <code class='l-code-inline'>.form-control--inline</code>.

      +note
       +p Long labels can have <code class='l-code-inline'>max-width</code> set as inline style attribute to wrap text.

      +warning
        +p Inline labels are currently supported on <code class='l-code-inline'>.radiocheck-group</code> element.

