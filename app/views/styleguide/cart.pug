extends templates/layout

include ./../mixins/icon
include ./../mixins/addTo

//- Options
block prepend opts
  - var page = helpers.getPageIds('components.cart', l_sitemap);
  - var categoryID = page.category;
  - var pageID = page.page;

//- Content
block prepend content

  +main-info(['app/styles/modules/_cart-item.scss'], contents)

    +p-big Documentation of Cart Item component.

  //- end: main info

//- Content
block append content

  //- MEDIA QUERIES
  +content-section(contents[0])

    +p Cart items display data about items in cart. There is also a condensed variant with a little different markup.

    +content-sub-section('Default')

    +demo
      +demo-example
        .row
          .col--m-12
            ul.list.list--unstyled.list--cart
              li.list__item
                .cart-item
                  .cart-item__thumbnail
                    .thumbnail.thumbnail--book.thumbnail--medium-large.thumbnail--clickable
                      .thumbnail__img-wrap
                        img(src="/images/content/books/sample-15.jpg")
                  .cart-item__content
                    .cart-item__column.cart-item__column--product-name
                      .text-semibold.m-none.text-ellipsis Základy rybolovu pro kluky a holky
                      .text-color-grey.text-size-small.m-none.text-ellipsis Frank Weissert, Jack Thorne a John Tiffany
                      .bar.bar--small.text-size-small.m-none.show-m
                        .bar__item
                          .portrait.portrait--small(style="background-image: url('https://www.martinus.sk/data/autori/img/a1666.jpg');")
                        .bar__item
                          span.text-transform-upper.text-color-grey Tento titul číta aj
                          |
                          |
                          a.link(href="#") Jana Róbertson

                    .cart-item__column.cart-item__column--wishlist
                      +addTo({ text: '' }).mb-none
                    .cart-item__column.cart-item__column--tags.show-m
                      .badge.text-nowrap E-kniha
                    .cart-item__column.cart-item__column--qty
                      .form-control.form-control--input.m-none
                        .input-addons.input-addons--small.justify-content-end
                          .input-addons__item.p-none
                            button(type="button" data-number-spinner="decrease" data-controls=`#product-${i}-qty`).btn.btn--small.btn--clean.btn--equal
                              +icon('minus', 'icon--medium', 'mínus')
                          input(type="number" id=`product-${i}-qty` min="0" max="100" step="1" value="1").input.input--small.input--short.px-none.text-center
                          .input-addons__item.p-none
                            button(type="button" data-number-spinner="increase" data-controls=`#product-${i}-qty`).btn.btn--small.btn--clean.btn--equal
                              +icon('plus', 'icon--medium', 'plus')
                    .cart-item__column.cart-item__column--price
                      .text-semibold.text-size-medium.text-nowrap 12,99 €
                    .cart-item__column.cart-item__column--remove
                      button.btn.btn--clean.m-none(type="button")
                        +icon('trash', 'icon--medium')


      +demo-code
        :code
          <ul class="list list--cart">
            <li class="list__item">
              <div class="cart-item">
                <div class="cart-item__thumbnail">
                  ...
                </div>
                <div class="cart-item__content">
                  <div class="cart-item__column">
                    ...
                  </div>
                  <div class="cart-item__column">
                    ...
                  </div>
                  <div class="cart-item__column">
                    ...
                  </div>
                </div>
              </div>
            </li>
          </ul>

    +content-sub-section('Condensed')

