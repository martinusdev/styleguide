            <ul>
              <li>
                <svg class="icon icon-home icon--xlarge">
                  <use xlink:href="#icon-home"></use>
                </svg>
              </li>
              <li>
                <svg class="icon icon-home icon--large">
                  <use xlink:href="#icon-home"></use>
                </svg>
              </li>
              <li>
