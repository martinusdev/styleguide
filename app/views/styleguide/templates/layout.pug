//- -----------------------------------------------
//- STYLEGUIDE LAYOUT
//- -----------------------------------------------

- var projectName = 'Light'

//- -----------------------------------------------
//- VARIABLES AND DATA

include ../mixins/components
include ../../mixins/mixins

//- -----------------------------------------------
//- OPTIONS

block opts

- var contents;
- var page;
- if(categoryID != -1) {
- var category = l_sitemap[categoryID].topics;
-   if(category[pageID].sub != undefined) {
-     contents = category[pageID].sub[subPageID].contents
-     page = category[pageID].sub[subPageID]
-   } else {
-     contents = category[pageID].contents
-     page = category[pageID]
-   }
- }

//- -----------------------------------------------
//- HTML

doctype html
html.no-js

  //- -----------------------------------------------
  //- HEAD

  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=yes")

    title #{projectName} - Styleguide
    meta(name='author', content='Lighting Beetle s.r.o.')
    meta(name='description', content='Light is SCSS/Pug foundation for living styleguides')
    meta(name='keywords', content='Living Styleguide, Styleguide, SCSS, Pug')
    link(rel="icon", type="image/png", href="/images/favicon.png")
    meta(name="theme-color", content="#ff5722")

    link(rel="stylesheet", href="/fonts/Tabac/fonts.css")
    link(rel="stylesheet", href="/fonts/opensans/fonts.css")

    link(rel="stylesheet", href="/styles/main.css")
    link(rel="stylesheet", href="/styles/light.css")

    script(src="/scripts/plugins/modernizr.js")

  //- -----------------------------------------------
  //- BODY

  body(data-spy='scroll', data-target='.js-scrollspy', data-offset=150)#top

    // offcanvas
    .l-offcanvas(data-role='offcanvas')

      // content main
      article#top.l-content-main

        include ../includes/header

        .l-content-main_inner

          block content

            unless categoryID == 0
              include ../includes/nav_sub

      aside.l-wrap-navs

          include ../includes/nav_main


      // end: content main

    // end: offcanvas

    //- -----------------------------------------------
    //- SCRIPTS

    script(src="/scripts/vendor.js")
    script(src="/scripts/main.js")
    script(src='/scripts/light.js')

    block scripts
