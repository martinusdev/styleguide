extends layouts/_default

block opts
    - var pageTitle = 'Košík - Doručenie'

block content
  main.bg-secondary
    section.section-progress
      .wrapper-main
        .row
          .bar.bar__progress.col--l-8.ofst--center
            .bar__item.done.bar__item--fill.text-center
              | Košík
            .bar__item.in-progress.bar__item--fill.text-center
              | Doručenie
            .bar__item.bar__item--fill.text-center
              | Platba
            .bar__item.bar__item--fill.text-center
              | Sumár

    section.section
      .wrapper-main
        .row
          .col--l-8.ofst--center
            .card.mb-small
              .card__content
                .bar
                  .bar__item
                    h2 Váš košík
                  .bar__item.bar__item--fill
                    .badge--circle.badge--circle--blue 4
                  .bar__item
                    button.btn.btn--clean.no-mrg.no-pad
                      +icon('edit').icon--medium.icon--left
                      | Upraviť
                ul.list.list--cart
                  div(data-collapse="115")
                    each item, i in books
                      li.list__item(id=`cart-item${i}` data-toggle-class="is-active")
                        .cart-item
                          .cart-item__content
                            .cart-item__column.cart-item__column--product-name
                              .text-semibold.no-mrg.text-ellipsis= item.title
                            .cart-item__column.cart-item__column--qty
                              .text-semibold.no-mrg
                                | 1x
                            .cart-item__column.cart-item__column--price
                              .text-semibold.text-size-medium.text-nowrap= item.price
                  a.link.text-size-medium.col--4.ofst--center(href="javascript:void(0)", data-toggle="previous, self", data-toggle-icon="icons_/app.svg#icon-arrow-up", data-toggle-text="Zobraziť všetký(+3)", data-collapse-trigger) <span data-toggle-text-target>Zobraziť všetký(+3)</span>#{' '}
                    +icon('arrow-down')

              .card__footer
                .bar.align-items-right.align-items-bottom
                  .bar__item
                    h3
                      | Spolu
                  .bar__item
                    h2.text-bold
                      | 21.45€

              .card__done
                 +icon('check-circle').icon--medium.text-color-success

            .card
              .card__content
                h2 Zvoľte spôsob doručenia

              .card__content
                .row
                  .col--l-6
                    .form-control.form-control--group
                      section.radiocheck-group.radiocheck-group--wider

                        .form-control.form-control--radio
                          .radio.radiocheck--large.radiocheck--transparent.align-items-top
                            input.radiocheck__input(type='radio', id='radio_group_shipping_01', name='radio_group_shipping')
                            label.radiocheck__control(for='radio_group_shipping_01')
                            label.radiocheck__label.radiocheck__label--multiline.mb-medium(for='radio_group_shipping_01')
                              p.text-semibold.no-mrg
                                | Kuriér GLS
                                span.text-size-medium.text-semibold
                                  | 4.28€
                              p.text-size-small.no-mrg
                                | Doručenie na druhý deň od odoslania

                        .form-control.form-control--radio
                          .radio.radiocheck--large.radiocheck--transparent.align-items-top
                            input.radiocheck__input(type='radio', id='radio_group_shipping_02', name='radio_group_shipping')
                            label.radiocheck__control(for='radio_group_shipping_02')
                            label.radiocheck__label.radiocheck__label--multiline.mb-medium(for='radio_group_shipping_02')
                              p.text-semibold.no-mrg
                                | Pošta (na adresu)
                                span.text-size-medium.text-semibold
                                  | 1.99€
                              p.text-size-small.no-mrg
                                | Doručenie na druhý deň od odoslania

                        .form-control.form-control--radio
                          .radio.radiocheck--large.radiocheck--transparent.align-items-top
                            input.radiocheck__input(type='radio', id='radio_group_shipping_03', name='radio_group_shipping')
                            label.radiocheck__control(for='radio_group_shipping_03')
                            label.radiocheck__label.radiocheck__label--multiline.mb-medium(for='radio_group_shipping_03')
                              p.text-semibold.no-mrg
                                | Osobný odber
                                span.text-size-medium.text-semibold.text-transform-upper
                                  | zadarmo
                              p.text-size-small.no-mrg
                                | Doručenie na druhý deň od odoslania
                  .col--l-6
                    .form-control.form-control--group
                      .radiocheck-group.radiocheck-group--wider
                        .form-control.form-control--radio
                          .radio.radiocheck--large.radiocheck--transparent.align-items-top
                            input.radiocheck__input(type='radio', id='radio_group_shipping_04', name='radio_group_shipping')
                            label.radiocheck__control(for='radio_group_shipping_04')
                            label.radiocheck__label.radiocheck__label--multiline.mb-medium(for='radio_group_shipping_04')
                              p.text-semibold.no-mrg
                                | Balíkomat
                                span.text-size-medium.text-semibold
                                  | 1.99€
                              p.text-size-small.no-mrg
                                | Doručenie na druhý deň od odoslania

                        .form-control.form-control--radio
                          .radio.radiocheck--large.radiocheck--transparent.align-items-top
                            input.radiocheck__input(type='radio', id='radio_group_shipping_05', name='radio_group_shipping')
                            label.radiocheck__control(for='radio_group_shipping_05')
                            label.radiocheck__label.radiocheck__label--multiline.mb-medium(for='radio_group_shipping_05')
                              p.text-semibold.no-mrg
                                | Pošta(na poštu)
                                span.text-size-medium.text-semibold
                                  | 1.99€
                              p.text-size-small.no-mrg
                                | Doručenie na druhý deň od odoslania

                        .form-control.form-control--radio
                          .radio.radiocheck--large.radiocheck--transparent.align-items-top
                            input.radiocheck__input(type='radio', id='radio_group_shipping_06', name='radio_group_shipping')
                            label.radiocheck__control(for='radio_group_shipping_06')
                            label.radiocheck__label.radiocheck__label--multiline.mb-medium(for='radio_group_shipping_06')
                              p.text-semibold.no-mrg
                                | Zasielkovňa
                                span.text-size-medium.text-semibold.text-transform-upper
                                  | zadarmo
                              p.text-size-small.no-mrg
                                | Doručenie na druhý deň od odoslania

              .card__content
                .row
                  .col--m-5.col--s-8.ofst--center
                    .btn-layout--vertical.mb-medium
                      button.btn.btn--primary.is-disabled(type="submit")
                        | Pokračovať v objednávke

            .card.mb-small
              .card__content
                .bar
                  .bar__item.bar__item--fill
                    h2 Zvoľte spôsob doručenia
                  .bar__item
                    button.btn.btn--clean.no-mrg.no-pad
                      +icon('edit').icon--medium.icon--left
                      | Upraviť

              .card__content.no-pad-top.mb-medium
                .bar.no-mrg
                  .bar__item.bar__item--fill.text-size-medium
                    | Balíkomat
                  .bar__item.text-size-medium
                    strong 1.99€

              .card__done
                +icon('check-circle').icon--medium.text-color-success

            .card.mb-small
              .row
                .col--s-11.col--m-6.ofst--center

                  .card__content
                    h2 Kde si prídete nákup vyzdvihnúť?
                    .btn-layout--vertical.mb-small
                      button.btn.btn--ghost
                        +icon('target').icon--left.icon--medium
                        | Zistiť podľa mojej polohy

                    .form-control.form-control--select.mb-small
                      .form-label
                        label.text-transform-upper
                          | Kraj
                      select.js-select
                          option(selected disabled placeholder) Zadajte kraj / vyberte zo zoznamu
                          option Bratislavský

                    .form-control.form-control--select.mb-small
                      .form-label
                        label.text-transform-upper
                          | Okres
                      select.js-select
                          option(selected disabled placeholder) Zadajte okres / vyberte zo zoznamu
                          option Bratislavský

                    .form-control.form-control--select.mb-small
                      .form-label
                        label.text-transform-upper
                          | Mesto
                      select.js-select
                          option(selected disabled placeholder) Zadajte mesto / vyberte zo zoznamu
                          option Bratislava
                .col--s-11.col--m-6.ofst--center
                  .card__content.no-pad
                  // map container

              .card__content
                .row
                  .col--s-11.col--m-6.ofst--center
                    .btn-layout--vertical.mb-small
                      button.btn.btn--primary.is-disabled(type="submit")
                        | Pozrieť ukážku

            .card.mb-small
              .card__content
                h2.no-mrg Fakturačná adresa

              .card__content
                .row
                  .col--s-11.col--m-6.ofst--center
                    .form-control.form-control--input.mb-small
                      .form-label.form-label--required
                        label.text-transform-upper(for="checkout_surname")
                          | meno
                      input.input(type="text", name="checkout_surname", id="checkout_surname", placeholder="Zadajte meno")

                    .form-control.form-control--input.mb-small
                      .form-label.form-label--required
                        label.text-transform-upper(for="checkout_lastname")
                          | priezvisko
                      input.input(type="text", name="checkout_lastname", id="checkout_lastname", placeholder="Zadajte priezvisko")

                    .form-control.form-control--checkbox
                      .checkbox.radiocheck--large.radiocheck--transparent
                        input.radiocheck__input(type='checkbox', id='checkout_company_invoice', name='checkout_company_invoice')
                        label.radiocheck__control(for='checkout_company_invoice')
                        label.radiocheck__label(for='checkout_company_invoice')
                          | Chcem faktúrovať na firmu

                    .form-control.form-control--input.mb-small
                      .form-label.form-label--required
                        label.text-transform-upper(for="checkout_address_option1")
                          | adresa
                      input.input(type="text", name="checkout_address", id="checkout_address_option1", placeholder="Napr. ulica, číslo...")

                    .form-control.form-control--input.mb-small
                      input.input(type="text", name="checkout_address", id="checkout_address_option2", placeholder="Napr. poschodie, zvonček...")

                    .form-control.form-control--input.mb-small
                      .form-label.form-label--required
                        label.text-transform-upper(for="checkout_zip")
                          | psč
                      input.input(type="text", name="checkout_zip", id="checkout_zip", placeholder="Zadajte PSČ")

                    .form-control.form-control--input.mb-small
                      .form-label.form-label--required
                        label.text-transform-upper(for="checkout_city")
                          | mesto
                      input.input(type="text", name="checkout_city", id="checkout_city", placeholder="Zadajte mesto")

                    .form-control.form-control--select.mb-small
                      .form-label.form-label--required
                        label.text-transform-upper
                          | štát
                      select.js-select
                          option(selected disabled placeholder) Slovensko
                          option Slovensko

                    .form-control.form-control--input.mb-medium
                      .form-label.form-label--required
                        label.text-transform-upper(for="checkout_tel")
                          | mobil
                      .input-addons
                        .input-addons__item.no-pad
                          select.js-select
                            option(selected disabled placeholder) +421
                            option +421
                        input.input(type="number", name="checkout_tel", id="checkout_tel", placeholder="902 000 000")

                    .btn-layout--vertical.no-mrg
                      button.btn.btn--primary.is-disabled(type="submit")
                        | Potvrdiť fakturačnú adresu


