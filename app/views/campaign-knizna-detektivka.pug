extends campaign-knizna-detektivka-layout

block tab
    section.section.section--small
      .wrapper-main.overflow-scroll-x
        ul.tab-nav
          li.tab-nav__item.is-active
            a.tab-nav__content.tab-nav__content--link(href='campaign-knizna-detektivka.html')
              .tab-nav__content-wrap Pátranie
          li.tab-nav__item
            a.tab-nav__content.tab-nav__content--link(href='campaign-knizna-detektivka-pribeh.html')
              .tab-nav__content-wrap Príbeh
          li.tab-nav__item
            a.tab-nav__content.tab-nav__content--link(href='campaign-knizna-detektivka-pravidla.html')
              .tab-nav__content-wrap Pravidlá
    section.kd-content.section.pb-large
      .wrapper-main
        .row
          .col--m-8
            .row
              each day in days
                .col--6.col--m-4.col--l-3.mb-medium
                  .kd-folder
                    if day.done
                      .kd-folder__complete
                        +icon('check-circle').fa-lg
                    .kd-folder__content
                      if day.available
                        a.kd-folder__hero
                          img(src=`images/content/campaign/knizna-detektivka/heroes/${day.hero}.png`)
                      else
                        div.kd-folder__date
                          span(data-tooltip, title=`Pátranie začne ${day.date}`)= day.date
          .col--m-4
            .card
              h2.text-color-white.bg-primary-light.mb-none.p-small.text-center.pt-small.pb-small
                | Knižný zlodej
              img(src='images/content/campaign/knizna-detektivka/identikit.jpg').mb-small
              .card__content.text-center
                p Napíš meno neznámeho páchateľa,<br>ktoré sa ti podarilo vypátrať.
                .form-control.form-control--input
                  input.input.input--large(type="text", placeholder="Napr. Kornélia Dlhoprstá")

                button.btn.btn--primary.btn--large Hľadať

