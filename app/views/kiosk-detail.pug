                  +icon('star').rating-star__item.icon--large.is-active
                  +icon('star').rating-star__item.icon--large.is-active
                  +icon('star-half').rating-star__item.icon--large.is-active
              .col--l-7.col--l-border
                table.book-rating__table.table.table--clean.no-mrg
                  tbody
                    -
                      const barRating = [857, 10, 24, 3, 12];
                      const barRatingSum = barRating.reduce((a, b) => (a + b), 0);
                    each rating, ratingIndex in barRating
                      tr
                        td
                          .rating-star
                            each star, starIndex in Array(5)
                              +icon('star').rating-star__item.icon--medium(class=(starIndex <= (4 - ratingIndex)) && 'is-active')
                        td
                          span= barRating[ratingIndex]
                        td(width="100%")
                          -
                            const width = `${Math.floor(barRating[ratingIndex] / barRatingSum * 100)}%`;
                          .rating-bar(class=`rating-bar--${5 - ratingIndex}`, style=`width: ${width};`)

