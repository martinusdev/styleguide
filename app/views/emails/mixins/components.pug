mixin card(props = {})
  -
    const {} = props;

  +table(cellpadding="0", cellspacing="0", width="100%", bgcolor="ffffff")
    +row()
      +col(style=`padding: 20px;`).padding
        block

mixin pricebox(props = {})
  -
    const {
      before = '8,90 €',
      after = '8,46 €',
      discount = '-5 %',
      size = 'medium',
      button = 'Do košíka',
    } = props;

  +table(cellpadding="5")
    +row
      +col(align="center", style=`line-height: 1.3; font-size: ${sFontMedium};`).font-medium
        if size == 'medium'
          +strikethrough()=before
          br
        if size == 'medium'
          +tag({color: sColorPrimary}).font-medium=discount
        if size == 'small'
          +tag({color: sColorPrimary, fontSize: '12px'}).font-small=discount
      +col
        if size == 'medium'
          span(style=`font-size: ${sFontH1}; font-weight: bold; white-space: nowrap;`).font-h1=after
        if size == 'small'
          span(style=`font-size: ${sFontH2}; font-weight: bold; white-space: nowrap;`).font-h2=after
    if button != null
      +row
        +col(colspan="2")
          +button({text: button})

mixin product(props = {})
  -
    const {
      type = 'horizontal',
      part = null,
      data = null,
    } = props;

  if type == 'horizontal'
    +table(cellpadding="10", cellspacing="0", width="100%")
      +row
        +col(valign="top", width="40%")
          +thumb({cover: data.cover})
        +col(valign="top", width="60%")
          h2(style=`margin-bottom: 3px; margin-top: 0; font-size: ${sFontH2}`).font-h2
            a(style=`color: #000;`)
              =data.title
          p(style=`margin: 0; color: #000; font-size: ${sFontMedium};`).font-medium
            =data.author
          p(style=`font-size: 12px; font-size: ${sFontSmall}`).font-small
            | Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet enim ac nulla accumsan, nec gravida metus pharetra. Duis faucibus felis enim, nec fringilla lectus commodo vitae.

          +pricebox

  if type == 'vertical'

    h2(style=`margin-bottom: 3px; margin-top: 0; font-size: ${sFontMedium};`).font-medium
      a(style="color: #000;")
        =data.title
    p(style=`margin: 0; color: #${sColorGreyDark}; font-size: ${sFontSmall};`).font-small
      =data.author
    +pricebox({size: 'small', button: null})

