          const collections = true,
                ads = true,
                counter = false,
                cartButton = false,
                productInfo = true;

        .carousel-lite.mb-large.mj-carousel
          .carousel-lite__container.mj-carousel__scroll
            .carousel-lite__wrapper.mj-carousel__content
              each item, i in [...books, ...books, ...books, ...books]
                +product().mb-small.text-left.carousel-lite__slide
                  if item.ad && ads
                    .h5.mb-tiny reklama
                  +productCover({cover: item.cover, collection: i < 2 && collections})
                  +productTitle({
                    collection: i < 2 && collections,
                    title: i < 2 && collections ? `Kolekcia ${i + 1}` : item.title, author: i < 2 && collections ? false : item.author, ad: item.ad && ads })
                  if productInfo
                    if cartButton
                      +productBuy({price: item.price})
                    else
                      +productMeta({
                        discount: item.discount,
                        rating: item.rating,
                        price: item.price,
                        collection: i < 2 && collections,
                        soldOut: item.soldOut,
                        upcoming: item.upcoming,
                      })

