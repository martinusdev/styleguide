extends layouts/_default

block opts
    - var pageTitle = 'Prihlásenie'

block content
  main.bg-grey
    .wrapper-container
      .wrapper-secondary.reglog--border
        section.section.no-pad.mb-medium
          .height-medium
          .bar.no-mrg
            .bar__item.bar__back.no-mrg
              a.link.text-size-medium
                +icon('arrow-left').icon--left.text-space-right
                | Späť
            
            .bar__content.bar__item--fill
              h4.text-center.no-mrg.align-self-middle Prihlásenie
              
        hr.no-mrg

        section.section.no-pad
          .height-medium
          .row.book-detail.align-items-center
            .col--m-5.col--s-8.col--11
              p.text-left.text-medium.mb-small
                | Váš e-mail: peter.skrovan@gmail.com  
                
              .btn-layout--vertical.mb-medium
                button.btn.btn--clean.text-left.no-pad
                  +icon('reaction').icon--left.text-space-right
                  | chcem použiť iný mail
              
              h4.text-center.mb-medium
                | Ahoj Peter, si to ty?

              .form-control.form-control--input.no-mrg
                input.input(type="password", name="reglog_password", id="reglog_password", placeholder="Zadaj tvoje heslo", required)

              .btn-layout--vertical.no-mrg
                button.btn.btn--clean
                  | zabudol som heslo
                  
              .btn-layout--vertical.mb-medium
                button.btn.btn--primary Pokračovať

        hr.no-mrg

        article.card.hide-m
          .card__content.card__content--overflow
            +booksCarouselHorizontal


