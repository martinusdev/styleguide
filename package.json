{
  "name": "light",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/lightingbeetle/light"
  },
  "version": "1.0.0",
  "description": "Light description",
  "devDependencies": {
    "dotenv": "~10.0.0",
    "eslint": "~7.32.0",
    "eslint-config-airbnb-base": "~14.2.1",
    "eslint-loader": "~4.0.2",
    "eslint-plugin-import": "~2.23.4",
    "glob": "^7.1.7",
    "gulp": "~4.0.2",
    "gulp-hub": "~4.2.0",
    "lint-staged": "~11.1.1",
    "lodash": "^4.17.21",
    "pre-commit": "~1.2.2",
    "stylelint": "~13.13.1",
    "stylelint-config-sass-guidelines": "~8.0.0"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "prepare": "gulp prepare",
    "build": "gulp build",
    "serve": "gulp serve",
    "lint-staged": "lint-staged"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "app/scripts/**/*.js": "eslint",
    "app/styles/**/*.scss": "stylelint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^5.15.4",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/pro-light-svg-icons": "^5.15.4",
    "@fortawesome/pro-solid-svg-icons": "^5.15.4",
    "accessible-autocomplete": "~2.0.3",
    "animated-scroll-to": "^1.2.2",
    "bootstrap": "^5.1.1",
    "chart.js": "^2.7.2",
    "choices.js": "~9.0.1",
    "clipboard": "~2.0.8",
    "gumshoe": "github:adammockor/gumshoe#80a5d8ee7eaa43e2bb7405b68579563e79c71883",
    "jquery": "^3.6.0",
    "jquery-mousewheel": "~3.1.13",
    "lg-fullscreen.js": "~1.2.0",
    "lg-hash.js": "~1.0.0",
    "lg-thumbnail.js": "~1.2.0",
    "lg-video.js": "~1.3.0",
    "lg-zoom.js": "~1.3.0",
    "light-scripts": "^3.2.0",
    "lightgallery.js": "^1.4.0",
    "mutationobserver-shim": "^0.3.7",
    "normalize.css": "~8.0.1",
    "scrollmonitor": "^1.2.4",
    "smooth-scroll": "~16.1.3",
    "sticky-js": "github:jurajk/sticky-js#8595f1405a89a87f2d80df7284c7c84392fb66c5",
    "svg4everybody": "~2.1.9",
    "swiper": "~6.8.1",
    "three": "^0.131.2",
    "tippy.js": "^6.3.1"
  },
  "browserslist": [
    "> 2%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "arrow-parens": "off",
      "comma-dangle": "off",
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": true
        }
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "prefer-spread": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "!gulp/**/*.js"
          ]
        }
      ]
    },
    "globals": {
      "$": true,
      "jQuery": true,
      "Modernizr": true,
      "window": true
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "ignoreFiles": [
      "app/styles/vendors/**/*.scss"
    ],
    "rules": {
      "color-named": [
        "never",
        {
          "ignore": [
            "inside-function"
          ]
        }
      ],
      "max-nesting-depth": null,
      "order/properties-alphabetical-order": null,
      "order/order": null,
      "scss/at-function-pattern": "^[_a-z]+([a-z0-9-]+[a-z0-9]+)?$",
      "selector-class-pattern": null,
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [
            "attribute",
            "class"
          ]
        }
      ]
    }
  }
}
