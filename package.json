{
  "name": "martinus-styleguide",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/lightingbeetle/light"
  },
  "version": "1.0.0",
  "description": "Martinus Styleguide",
  "devDependencies": {
    "browserslist-ga-export": "^4.0.1",
    "dotenv": "~10.0.0",
    "eslint": "~7.32.0",
    "eslint-config-airbnb-base": "~15.0.0",
    "eslint-loader": "~4.0.2",
    "eslint-plugin-import": "~2.25.3",
    "glob": "^7.2.0",
    "gulp": "~4.0.2",
    "gulp-hub": "~4.2.0",
    "lint-staged": "~12.1.2",
    "lodash": "^4.17.21",
    "postcss-scss": "^4.0.2",
    "pre-commit": "~1.2.2",
    "stylelint": "~14.1.0",
    "stylelint-config-sass-guidelines": "~9.0.1"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "prepare": "gulp prepare",
    "build": "gulp build",
    "serve": "gulp serve",
    "lint-staged": "lint-staged"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "app/scripts/**/*.js": "eslint",
    "app/styles/**/*.scss": "stylelint"
  },
  "dependencies": {
    "@fortawesome/fontawesome-pro": "^6.2.0",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-brands-svg-icons": "^6.2.0",
    "@fortawesome/pro-duotone-svg-icons": "^6.2.0",
    "@fortawesome/pro-light-svg-icons": "^6.2.0",
    "@fortawesome/pro-regular-svg-icons": "^6.2.0",
    "@fortawesome/pro-solid-svg-icons": "^6.2.0",
    "accessible-autocomplete": "~2.0.4",
    "animated-scroll-to": "^2.3.0",
    "bootstrap": "5.1.3",
    "chart.js": "^2.7.2",
    "choices.js": "~10.1.0",
    "clipboard": "~2.0.11",
    "gumshoe": "github:adammockor/gumshoe#80a5d8ee7eaa43e2bb7405b68579563e79c71883",
    "jquery": "^3.6.0",
    "jquery-mousewheel": "~3.1.13",
    "lg-fullscreen.js": "~1.2.0",
    "lg-hash.js": "~1.0.0",
    "lg-thumbnail.js": "~1.2.0",
    "lg-video.js": "~1.3.0",
    "lg-zoom.js": "~1.3.0",
    "light-scripts": "^3.2.0",
    "lightgallery.js": "^1.4.0",
    "mutationobserver-shim": "^0.3.7",
    "normalize.css": "~8.0.1",
    "scrollmonitor": "1.2.11",
    "smooth-scroll": "~16.1.3",
    "sticky-js": "github:jurajk/sticky-js#8595f1405a89a87f2d80df7284c7c84392fb66c5",
    "svg4everybody": "~2.1.9",
    "swiper": "~9.0.5",
    "three": "^0.138.3",
    "tippy.js": "^6.3.7"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "arrow-parens": "off",
      "comma-dangle": "off",
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": true
        }
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "prefer-spread": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "!gulp/**/*.js"
          ]
        }
      ]
    },
    "globals": {
      "$": true,
      "jQuery": true,
      "Modernizr": true,
      "window": true
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  }
}
