{
  "name": "light",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/lightingbeetle/light"
  },
  "version": "1.0.0",
  "description": "Light description",
  "devDependencies": {
    "dotenv": "~4.0.0",
    "eslint": "~3.19.0",
    "eslint-config-airbnb-base": "~11.2.0",
    "eslint-loader": "~1.7.1",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-prettier": "~2.1.1",
    "glob": "^7.1.3",
    "gulp": "~3.9.1",
    "gulp-hub": "~0.8.0",
    "light-scripts": "~2.3.3",
    "lint-staged": "~3.4.0",
    "lodash": "^4.17.11",
    "pre-commit": "~1.2.2",
    "prettier": "~1.3.1",
    "stylelint": "~7.10.1",
    "stylelint-config-light": "~1.0.0"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "prepare": "gulp prepare",
    "build": "gulp build",
    "serve": "gulp serve",
    "lint-staged": "lint-staged"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "app/scripts/**/*.js": "eslint",
    "app/styles/**/*.scss": "stylelint"
  },
  "dependencies": {
    "accessible-autocomplete": "~1.6.2",
    "animated-scroll-to": "^1.2.2",
    "bootstrap": "~3.3.7",
    "chart.js": "^2.7.2",
    "choices.js": "^3.0.4",
    "clipboard": "~1.7.1",
    "gumshoe": "github:adammockor/gumshoe#80a5d8ee7eaa43e2bb7405b68579563e79c71883",
    "jquery": "~3.2.1",
    "jquery-mousewheel": "~3.1.13",
    "lg-fullscreen.js": "~1.0.0",
    "lg-hash.js": "~1.0.0",
    "lg-thumbnail.js": "~1.0.0",
    "lg-video.js": "~1.0.0",
    "lg-zoom.js": "~1.0.1",
    "lightgallery.js": "~1.0.1",
    "normalize.css": "~7.0.0",
    "scrollmonitor": "^1.2.4",
    "smooth-scroll": "github:adammockor/smooth-scroll#6e9cfb9efe9982433ea8ae1a0843bf7b3bde8aef",
    "sticky-js": "github:jurajk/sticky-js#8595f1405a89a87f2d80df7284c7c84392fb66c5",
    "svg4everybody": "^2.1.9",
    "swiper": "~3.4.2",
    "three": "^0.86.0",
    "tippy.js": "^1.4.2"
  },
  "browserslist": [
    "> 2%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "arrow-parens": "off",
      "comma-dangle": "off",
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": true
        }
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "prefer-spread": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "!gulp/**/*.js"
          ]
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "all",
          "singleQuote": true
        }
      ]
    },
    "globals": {
      "$": true,
      "jQuery": true,
      "Modernizr": true,
      "window": true
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-light",
    "ignoreFiles": [
      "app/styles/vendors/**/*.scss"
    ]
  }
}
